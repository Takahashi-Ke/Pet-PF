<div class="container-fluid">
  <div class="row">
    <%= render 'pets/pet_info', pet: current_owner.pet %>
    <div class="col-lg-8 ml-5">
      <div class="row ml-3 mb-3">
        <h4>会話リスト</h4>
      </div>
      <div class="scroll-area">
        <% if @pets.present? %>
          <% @pets.each do |pet| %>
            <div class="row chat-list">
              <div class="col-lg-1">
                <%= link_to pet_chats_path(pet) do %>
                  <%= attachment_image_tag pet, :image, size:'80x80', fallback: "pet_no_image.png", class:"rounded-circle icon-img" %>
                <% end %>
              </div>
              <div class="col-lg-10 ml-3">
                <div class="row mt-2">
                  <div class="col-lg-7">
                    <h6><%= link_to pet.name, pet_chats_path(pet) %></h6>
                  </div>
                  <% if pet.latest_message(pet).present? %>
                    <div class="col-lg-3">
                      <%= time_ago_in_words(pet.latest_message(pet).created_at) %>前
                    </div>
                  <% end %>
                </div>
                <% if pet.latest_message(pet).present? %>
                  <div class="row mt-3 ml-5 latest-message">
                    <%= link_to pet_chats_path(pet_id: pet) do %>
                      <%= truncate(pet.latest_message(pet).message, length: 25) %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="row mt-5 ml-5 no-contents">
            <p>会話はまだありません</p>
          </div>
        <% end %>
          
      </div>

      </div>
  </div>
  
  <div class="modal-wrapper"></div>
  <div class="diary-modal">
    <%= render 'diaries/diary_form', diary: @diary, pet: current_owner.pet %>
  </div>
  
</div>