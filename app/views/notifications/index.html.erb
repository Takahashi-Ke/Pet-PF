<div class="container-fluid">
  <div class="row">
    <div class="col-2 ml-5 mr-3">
      <%= render 'pets/pet_info', pet: @pet %>
    </div>
    <div class="col-9">
        <div class="row ml-5 mb-2">
          <h4>お知らせ</h4>
        </div>
        <div class="scroll-area">
          <% if @notifications.exists? %>
            <% @notifications.each do |notification| %>
              <div class="contents-box">
                <div class="row mt-2 mb-2">
                  <div class="col-1 ml-3">
                    <%= link_to pet_path(notification.visitor) do %>
                      <%= attachment_image_tag notification.visitor, :image, size: '70x70', fallback: "no_image.png", class:"rounded-circle" %>
                    <% end %>
                  </div>
                  <div class="col-6 mt-4">
                    <%= link_to notification.visitor.name, pet_path(notification.visitor) %><span>さんが</span>
                      <% if notification.diary.nil? %>
                        <%= render 'memory_notification_list', notification: notification %>
                      <% else %>
                        <%= render 'diary_notification_list', notification: notification %>
                      <% end %> 
                  </div>
                  <div class="col-2 mt-4">
                    <%= time_ago_in_words(notification.created_at) %>前
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="row mt-5 ml-5 pl-5">
              <h5>お知らせはありません</h5>
            </div>
          <% end %>
        </div>
        
    </div>
    <div class="modal-wrapper"></div>
    <!--日記新規投稿-->
    <div class="diary-modal">
      <%= render 'diaries/diary_form', diary: @diary, pet: @pet %>
    </div>
  </div>
</div>