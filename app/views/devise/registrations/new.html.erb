<div class="container">
  <div class="row">
    <h2>新規登録</h2>
  </div>
  <div class="row">
    <p>※は必須事項になります</p>
  </div>

  <%= form_with model: @owner, url: owner_registration_path, local: true do |f| %>
  <%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="col-4">
        <h4>あなた</h4>
        <div class="field">
          <%= f.label :写真 %><br />
          <%= f.attachment_field :image %>
        </div>
        <div class="field">
          <%= f.label :名前※ %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        <div class="field">
          <%= f.label :メールアドレス※ %><br />
          <%= f.email_field :email, autocomplete: "email" %>
        </div>
      </div>
      <!--Petモデルの入力フォーム-->
      <%= f.fields_for :pet, Pet.new do |pet| %>
        <div class="col-8">
          <h4>ペット</h4>
          <div class="row">
            <div class="col-4">
              <div class="field">
                <%= pet.label :写真 %><br />
                <%= pet.attachment_field :image %>
              </div>
            </div>
            <div class="col-8">
              <div class="row">
                <div class="col-6">
                  <div class="field">
                    <%= pet.label :名前※ %><br />
                    <%= pet.text_field :name %>
                  </div>
                </div>
                <div class="col-6">
                  <div class="field">
                    <%= pet.label :性別※ %><br />
                    <%= pet.radio_button :gender, 'オス', checked: true %>
                    <%= pet.label :gender, "オス", {value: 1} %>
                    <%= pet.radio_button :gender, 'メス' %>
                    <%= pet.label :gender, "メス", {value: 2} %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  <%= pet.label :生年月日※ %><br />
                  <%#= sprintf(pet.date_select(:birthday, prefix:'birthday', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日' %>
                  <%= pet.date_select :birthday, start_year: 1990, end_year: Time.now.year,default: Date.today %>
                </div>
                <div class="col-6">
                  <%= pet.label :種類※ %><br />
                  <%= pet.select :type, Pet.types.keys %>
                </div>
              </div>
              <div class="row">
                <%= pet.label :紹介文 %><br />
                <%= pet.text_area :introduction %>
              </div>
            </div>
          </div>
          <div class="row">
            <p>性別、生年月日、種類は登録後変更ができません。<br />
                ご注意ください。</p>
          </div>
        </div>
      <% end %>
      <!--Petモデル入力ここまで-->
    </div>
    <div class="row">
      <div class="col">
        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <span>(<%= @minimum_password_length %>文字以上で設定できます)※</span>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード確認※ %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      </div>
    </div>
  <% end %>
  <%= link_to "ログイン", new_owner_session_path %>
</div>
