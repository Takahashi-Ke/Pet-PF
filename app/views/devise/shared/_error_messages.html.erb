<% if resource.errors.any? %>
  <div class="error-message">
    <div class="row">
      <h3><span class="fas fa-exclamation-circle"></span>未入力の項目があります</h3>
    </div>
    <div class="row">
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
