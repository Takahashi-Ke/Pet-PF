<% pets.each do |pet| %>
  <div class="pet-contents">
    <div class="row">
      <div class="col-3">
        <%= link_to pet_path(pet) do %>
          <%= attachment_image_tag pet, :image, size:'70x70', fallback: "no_image.png", class:"rounded-circle" %>
        <% end %>
        <span> <%= link_to pet.name, pet_path(pet) %></span>
      </div>
      <div class="col-9 pt-4">
        <div class="row">
          <div class="col-2">
            <%= pet.type %>
          </div>
          <div class="col-2">
            <% if pet.gender == 'オス' %>
               <i class="fas fa-mars gender-icon"></i>
            <% else %>
              <i class="fas fa-venus gender-icon"></i>
            <% end %>
          </div>
          <div class="col-4">
            <%= pet.age %>歳<%= pet.moon_age %>ヶ月
          </div>
        </div>
      </div>
    </div>
    <div class="row ml-3">
      <div class="col-4 ml-5">
        <%= attachment_image_tag pet.owner, :image, size:'50x50', fallback: "no_image.png", class:"rounded-circle" %>
        <span> <%= pet.owner.name %></span>
      </div>
      <% if current_owner.pet.following?(pet) %>
        <div class="col-3 pl-5 d-flex align-items-center">
          <%= link_to "フォロー中", pet_relationship_path(pet, pet_id: pet.id), method: :delete, data: {confirm: "フォローを解除します。よろしいですか？"}, class:"btn-layout cancel-btn" %>
        </div>
        <div class="col-3 d-flex align-items-center">
          <%= link_to "会話する", pet_chats_path(pet_id: pet.id), class:"btn-layout" %>
        </div>
      <% else %>
        <div class="col-3 d-flex align-items-center">
          <%= link_to "フォロー", pet_relationships_path(pet_id: pet), method: :post, class:"btn-layout" %>
        </div>
      <% end %>
    </div>
    <div class="row">
       <%= truncate(pet.introduction, length: 100) %>
    </div>
  </div>
<% end %>