<div class="row d-flex justify-content-center">
  <h4>友だちを見つける</h4>
</div>
<div class="check-box">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
  <div class="row">
    <div class="col-10 d-flex justify-content-center">
      <%= f.text_field :keyword, size:'28',placeholder: "キーワード検索" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-10 ml-2">
      <h6>種類</h6>
    </div>
    <% Pet.types.map do |k, v| %>
      <div class="col-5 ml-4">
        <%= f.check_box :types, {multiple: true}, v, false %>
        <%= f.label :types, k %>
      </div>
    <% end %>
  </div>
  <div class="row mt-3">
    <div class="col-10 ml-2">
      <h6>性別</h6>
    </div>
    <% Pet.genders.map do |k, v| %>
      <div class="col-5 ml-4">
        <%= f.check_box :genders, {multiple: true}, v, false %>
        <%= f.label :genders, k %>
      </div>
    <% end %>
  </div>
  <div class="row mt-3">
    <div class="col-10 ml-2">
      <h6>性格</h6>
    </div>
    <% PetPersonality.personalities.map do |k, v| %>
      <div class="col-5 ml-4">
        <%= f.check_box :personalities, {multiple: true}, v, false %>
        <%= f.label :personalities, k %>
      </div>
    <% end %>
  </div>
  <div class="row d-flex justify-content-center">
    <%= f.submit "検索する", class:"btn-layout" %>
  </div>
<% end %>
</div>
