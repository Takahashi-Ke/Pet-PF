<div class="row d-flex justify-content-center">
  <h4>友だちを見つける</h4>
</div>
<div class="check-box">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
  <div class="row">
    <div class="col-10 ml-2">
      <h6>フリーワード</h6>
    </div>
    <div class="col-10 d-flex justify-content-center">
      <%= f.text_field :keyword, size:'28',placeholder: "Search" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-10 ml-2">
      <h6>種類</h6>
    </div>
    <% Pet.types.map do |k, v| %>
      <div class="col-5 ml-4">
        <%= f.check_box :type, {}, v, false %>
        <%= f.label :type, k %>
      </div>
    <% end %>
  </div>
  <div class="row mt-3">
    <div class="col-10 ml-2">
      <h6>性別</h6>
    </div>
    <% Pet.genders.map do |k, v| %>
      <div class="col-5 ml-4">
        <%= f.check_box :genders, {}, v, false %>
        <%= f.label :genders, k %>
      </div>
    <% end %>
  </div>
  <div class="row mt-3">
    <div class="col-10 ml-2">
      <h6>性格</h6>
    </div>
    <% PetPersonality.personalities.map do |k, v| %>
      <div class="col-5 ml-4">
        <%= f.check_box :personality, {}, v, false %>
        <%= f.label :personality, k %>
      </div>
    <% end %>
    <div class="row d-flex justify-content-center">
      <%= f.submit "検索する", class:"btn btn-outline-primary search-btn" %>
    </div>
  </div>
<% end %>
</div>
