<div class="container-fluid">
  <div class="row">
    <div class="chat-pet d-none d-lg-block col-lg-2">
      <%= render 'chat_pet', pet: @pet, room: @room, chat: @chat %>
    </div>
    <div class="col-12 col-lg-7 offset-lg-1">
      <div class="chat-contents">
        <%= render 'chat_contents', pet: @pet, chats: @chats, room: @room, chat: @chat %>
      </div>
    </div>
    <div class="chat-pet d-none d-lg-block col-lg-2" id="chat-me">
      <%= render 'chat_pet', pet: current_owner.pet, room: @room, chat: @chat %>
    </div>
  </div>
</div>