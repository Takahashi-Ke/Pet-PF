<div class="row">
  <div class="mx-auto">
    <%= link_to pet_path(pet) do %>
      <%= attachment_image_tag pet, :image, size: '120x120', fallback: "pet_no_image.png", class:"rounded-circle icon-img"  %>
    <% end %>
  </div>
</div>
<div class="row mt-2 mb-2 d-flex align-items-center justify-content-center">
  <h4><%= link_to pet.name, pet_path(pet) %></h4>
</div>

<div class="row d-flex justify-content-center">
  <%= attachment_image_tag pet.owner, :image, size: '80x80', fallback: "owner_no_image.png", class:"rounded-circle icon-img" %>
</div>
<div class="row d-flex align-items-center justify-content-center">
  <i class="fas fa-user-alt"></i><span class="pl-1 mt-1"><%= pet.owner.name %></span>
</div>
<% if pet.id == current_owner.pet.id %>
    <div class="row mt-5 d-flex align-items-center justify-content-center">
      <%= form_with model: [@pet, @chat], url: pet_chats_path(room_id: @room.id), remote: true do |f| %>
          <%= f.text_area :message, size: '25x3', placeholder: "メッセージ入力", class:"chat-form" %>
          <div class="col-2 offset-5 clearfix">
              <%= f.submit "送信", class:"btn-layout pr-4 pl-4" %>
          </div>
      <% end %>
    </div>
  <% else %>
    <div class="mt-3 pet-link">
      <%= link_to "プロフィールを見る", pet_path(pet) %>
    </div>
  <% end %>