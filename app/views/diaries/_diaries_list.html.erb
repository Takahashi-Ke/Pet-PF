<% diaries.each do |diary| %>
  <div class="diary-contents ml-3">
    <div class="row">
      <div class="col-2">
        <%= attachment_image_tag diary.pet, :image, size: '60x60', fallback: "no_image.png", class:"rounded-circle" %>
      </div>
      <div class="col-10">
        <div class="row">
          <div class="col-5">
            <%= link_to diary.pet.name, pet_path(diary.pet) %>
          </div>
          <div class="col-6 ml-3">
            <%= diary.created_at.to_s(:datetime_jp) %>
          </div>
          <div class="diary-body">
            <%= attachment_image_tag diary, :image, size: '200x200' %><br />
            <%= diary.body %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-2 offset-6 comment-btn">
        <i class="far fa-comment-alt"></i>
      </div>

      <div class="col-2 favorite-btn-<%= diary.id %>">
        <%= render 'favorites/favo', diary: diary %>
      </div>
      
      <!--日記削除ボタン-->
      <% if diary.pet == current_owner.pet %>
        <div class="col-2">
          <%= link_to diary_path(diary), method: :delete, data: {confirm: "削除しますか？"} do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      <% end %>
    </div>

    <!--コメント一覧-->
    <%= render 'diary_comments/diary_comments_list', diary: diary, diary_comment: @diary_comment %>

  </div>
<% end %>