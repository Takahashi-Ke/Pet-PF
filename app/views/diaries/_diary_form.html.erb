<div class="diary-modal">
  <div class="row">
    <div class="col-8 offset-1">
      <%= form_with model: diary, url: diaries_path(pet_id: pet), local: true do |f| %>
        <p>日記を書く</p>
        <%= f.text_area :body, placeholder: "今日の出来事", size: "50x5" %>
        <%= f.attachment_field :image %>
        <%= f.submit "投稿する" %>
      <% end %>
    </div>
  </div>
  <div class="row mt-2 d-flex justify-content-center">
    <div class="hide-modal-btn pl-3 pr-3 btn btn-outline-secondary">
      閉じる
    </div>
  </div>
</div>