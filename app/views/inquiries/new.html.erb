<div class="container">
  <div class="row d-flex justify-content-center">
    <h2>お問い合わせ</h2>
  </div>
  <div class="row d-flex justify-content-center text-danger">
    <p>※は必須事項になります</p>
  </div>
  <%= form_with model: @inquiry, url: inquiry_confirm_path, method: :get, local: true do |f| %>
    <% if @inquiry.errors.any? %>
      <div class="error-message">
        <h3><span class="fas fa-exclamation-circle"></span>未入力の項目があります</h3>
        <ul>
          <% @inquiry.errors.each do |attr, message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col-4 offset-4">
      <div class="row ml-3 mt-2">
        <%= f.label :名前※, class:"form-label" %>
      </div>
      <div class="row d-flex justify-content-center">
        <%= f.text_field :name, size:'30', autocomplete: "name" %>
      </div>
      <div class="row ml-3 mt-2">
        <%= f.label :メールアドレス※, class:"form-label" %>
      </div>
      <div class="row d-flex justify-content-center">
        <%= f.email_field :email, size:'30', autocomplete: "email" %>
      </div>
      <div class="row ml-3 mt-2">
        <%= f.label :お問い合わせ内容, class:"form-label" %>
      </div>
      <div class="row d-flex justify-content-center">
        <%= f.text_area :message, size:'30x2' %>
      </div>
      <div class="row mt-3 d-flex justify-content-center">
        <%= f.submit '確認', class: 'btn-layout btn-layout2 pr-5 pl-5' %>
      </div>
    </div>
  
  <% end %>
</div>
  
