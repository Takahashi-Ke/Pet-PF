<div class="container inquiry">
  <div class="row d-flex justify-content-center">
    <h2>お問い合わせ</h2>
  </div>
  <div class="row d-flex justify-content-center">
    <h5>お問い合わせ内容をご確認ください</h5>
  </div>
  <%= form_with model: @inquiry, url: inquiry_thanks_path, method: :get, local: :true do |f| %>
    <% if @inquiry.errors.any? %>
      <div class="error-message">
        <h3><span class="fas fa-exclamation-circle"></span>未入力の項目があります</h3>
        <ul>
          <% @inquiry.errors.each do |attr, message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col-12 col-lg-4 offset-lg-4">
      <div class="row ml-3 mt-2">
        <%= f.label :名前, class:"form-label" %>
      </div>
      <div class="row justify-content-center">
        <%= f.hidden_field :name %>
        <%= @inquiry.name %>
      </div>
      <div class="row ml-3 mt-2">
        <%= f.label :メールアドレス, class:"form-label" %>
      </div>
      <div class="row justify-content-center">
        <%= f.hidden_field :email %>
        <%= @inquiry.email %>
      </div>
      <div class="row ml-3 mt-2">
        <%= f.label :お問い合わせ内容, class:"form-label" %>
      </div>
      <div class="row justify-content-center">
        <%= f.hidden_field :message %>
        <%= simple_format(@inquiry.message) %>
      </div>
      <div class="row mt-3 justify-content-center">
        <%= f.submit '送信', class: 'btn-layout btn-layout2 pr-5 pl-5' %>
      </div>
    </div>
  <% end %>
</div>